<section>
  <h2>Top Restaurants</h2>
  <% @top_restaurants.each do |restaurant| %>
    <div class="restaurant-card">
      <h3><%= restaurant.name %></h3>
      <%= link_to 'Show this restaurant', restaurant_path(restaurant), class: 'btn btn-primary' %>
      <%= link_to 'See more', categories_path(restaurant_id: restaurant.id), class: 'btn btn-primary' %>
    </div>
  <% end %>
</section>



